<% css_class = 'flash-messages col-sm-5 patron-light__medium' %>
<%= content_tag(:div, md(flash_message), class: css_class) %>

<% if flash_message.present? %>
  <% modal_id = Digest::MD5.hexdigest(flash_message) %>
  <%= render 'shared/modal', modal_button_text: false, modal_id: modal_id, content: md(flash_message), modal_classes: flash_message_type.to_s %>
  <script>
    (function () {
      var modal = document.getElementById( '<%= modal_id %>' );
      var dlg = new DialogFx( modal );
      dlg.toggle();
    })();
  </script>
<% end %>
