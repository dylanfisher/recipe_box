<footer class="footer--primary">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <div class="col-sm-3">
        <%= link_to(root_path) do %>
          <%= embedded_svg('recipe-box-logo', class: 'recipe-box-logo footer--primary__recipe-box-logo') %>
        <% end %>
      </div>
      <div class="col-sm-3">
        Recipe box<br>
        Community<br>
        <%= link_to('Guidelines', about_path(anchor: 'guidelines')) %>
      </div>
      <div class="col-sm-3">
        <%= link_to('Profile<br>'.html_safe, user_path(current_user)) if current_user %>
        Submit<br>
        <%= login_or_logout_link %>
      </div>
      <div class="col-sm-3">
        Newsletter
      </div>
    </div>
  </div>
</footer>
