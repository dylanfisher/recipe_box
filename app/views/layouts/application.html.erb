<!DOCTYPE html>
<html>
<head>
  <title>RecipeBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= @application_body_class %>">
  <div class="flash-messages">
    <p class="notice flash-message"><%= notice %></p>
    <p class="alert flash-message"><%= alert %></p>
  </div>
  <%= content_for?(:header) ? yield(:header) : render('shared/nav_primary') %>
  <%= content_for?(:application) ? yield(:application) : yield %>
  <%= render 'shared/footer' %>
</body>
</html>
