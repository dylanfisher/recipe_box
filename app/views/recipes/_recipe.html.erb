  <div class="recipes-grid__item text-center col-sm-6">
    <%= link_to(recipe, class: 'link--blank') do %>
      <div class="recipes-grid__item__inner">
        <div class="recipes-grid__item__front">
          <div class="recipes-grid__item__gem recipe__gem">
            ï£¿
          </div>
          <%= content_tag(:h2, recipe.title, class: 'recipes-grid__item__title recipes-grid__item__centered-text bangla-regular__large') %>
