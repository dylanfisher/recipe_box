<%= content_tag :div, class: 'edit-recipes-list-item' do %>
  <div class="row">
    <%= link_to edit_recipe_path(recipe), class: 'edit-recipes-list-item__row-link link--blank' do %>
      <div class="col-sm-2">
        <%= render 'recipes/gem', recipe: recipe %>
      </div>
      <div class="col-sm-7">
        <%= content_tag :span, md(recipe.title), class: 'edit-recipes-list-item__title patron-medium__medium' %>
      </div>
    <% end %>
    <div class="col-sm-3">
      <div class="text-right">
        <%= link_to 'Edit', edit_recipe_path(recipe), class: 'edit-recipes-list-item__edit-button button--small' %>
        <%= link_to 'Delete', '#', class: 'button--small' %>
      </div>
    </div>
  </div>
<% end %>
